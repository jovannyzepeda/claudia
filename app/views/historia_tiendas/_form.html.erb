<%= form_for([@tienda, @historia_tienda]) do |f| %>
  <% if @historia_tienda.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@historia_tienda.errors.count, "error") %> No se ha podido almacenar el registro por las siguientes razones:</h2>
      <ul>
      <% @historia_tienda.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titulo, "Nombre de la historia"%>
    <%= f.text_field :titulo %>
  </div>
  <div class="field doscientos">
    <%= f.label :fecha , "Fecha de reporte"%>
    <%= f.date_field :fecha%>
  </div>
  <div class="field">
    <%= f.label :log , "Comentario"%>
    <%= f.text_area :log %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", "data-inline"=>"true"%>
  </div>
<% end %>
