<h2 class="alert alert-info text-center">Ingresar al sistema</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:data => {:ajax => 'false'}}) do |f| %>
  <div class="field">
    <%= f.label :email, "E-mail" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "ContraseÃ±a" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Ingresar", "data-role" => "button", "data-inline" => "true" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
