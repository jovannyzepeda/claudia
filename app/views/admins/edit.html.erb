  <div class="col-md-8 col-md-offset-2">
  <h2 class="proyect_name alert alert-info">
    <strong class="center">Modificar usuario</strong> 
  </h2>
  <%= link_to ' Regresar', admins_path, "data-role" => "button",
   "data-inline"=>"true"%>
  <%= form_for(@user, :url => { :action => "update" } ) do |f| %>
  <div class="field">
    <%= f.label :email , "Correo electronico *"%><br>
    <%= f.email_field :email, autofocus: true ,class: "form-control"%>
  </div>
  <div class="field doscientos">
    <%= f.label :tipo, "Privilegio" %><br />
    <%= f.select :tipo do%>
      <%= content_tag(:option, "Usuario", value: "1") %>
      <%= content_tag(:option, "Administrador", value: "2") %>
    <%end%>
  </div>
  <div class="field">
    <%= f.label :nombre, "Nombre de usuairo" %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :password , "Contraseña"%>
    <% if @minimum_password_length %>
    <em>(Minímo <%= @minimum_password_length %> caracteres)</em>
    <% end %><br>
    <%= f.password_field :password%>
  </div>
  <div class="field">
    <%= f.label :password_confirmation , "Confirma la Contraseña"%><br>
    <%= f.password_field :password_confirmation%>
  </div>
  <div class="actions">
    <%= f.submit  "Guardar Datos de usuario" , "data-inline" => "true"%>
  </div>
<% end %>
</div>
